<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.ioapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="pl.edu.agh.ki.mmorts.client.frontend.activities.InitialActivity"
            android:label="@string/app_name" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pl.edu.agh.ki.mmorts.client.frontend.activities.RunningActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="pl.edu.agh.ki.mmorts.client.frontend.activities.GridActivity"
            android:label="TEST" >
        </activity>
        <activity
            android:name="pl.edu.agh.ki.mmorts.client.frontend.activities.PlayAreaActivity"
            android:label="@string/title_activity_play_area" >
        </activity>
        <activity
            android:name="pl.edu.agh.ki.mmorts.client.frontend.activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            
        </activity>
    </application>

</manifest>
